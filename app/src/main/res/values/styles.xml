<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme.Fullscreen" parent="@style/Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarSize">70dp</item>
        <item name="actionBarSize">70dp</item>
        <item name="android:colorPrimary" tools:ignore="NewApi">#333</item>
        <item name="colorPrimary">#333</item>
        <item name="android:colorPrimaryDark" tools:ignore="NewApi">#000</item>
        <item name="colorPrimaryDark">#000</item>
    </style>


    <style name="Text" />

    <style name="Text.BoxScore">
        <item name="android:textSize">11sp</item>
        <item name="android:textColor">#777</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">1dp</item>
    </style>

    <style name="Text.BoxScore.Title">
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:background">#00000000</item>
    </style>

</resources>